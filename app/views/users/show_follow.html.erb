<table summary="Information about following/followers">
	<tr>
		<td class="main">
			<h1><%= @user.name %>的<%= @title %></h1>
			</br>
		<% if @users.any? %>
			<ul class="user">
				<%= render @users %>
			 </ul>
	    <% end %>
		</td>
		<td class="sidebar round">
	      <strong>名号</strong> <%= @user.name %><br />
	      <strong>URL</strong> <%= link_to user_path(@user), user_path(@user) %><br />
	      <strong>日记</strong> <%= @user.microposts.count %>
	      <%=render 'shared/stats' %>
	      
		  	<% if @users.any? %>
		  	  <% @users.each do |user|%>
		  	  <%= image_tag user.photo.url(:small) %>		
		  	  <% end %>
		  	<% end %>
	      
      </td>
	</tr>
</table>