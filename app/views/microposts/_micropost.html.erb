<tr>
  <td class="micropost">
    <span class="content"> <%= micropost.content %></span>
    
    <span class="timestamp"> 
      <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </td>

  <% if current_user?(micropost.user)%>

  	
  	  	<td>
  		<%= link_to "删除", micropost,:method => :delete,
  									  :confirm=> "确定要删除吗？",
  									  :title=> micropost.content %>
  	</td>

  <%end%>
</tr>
